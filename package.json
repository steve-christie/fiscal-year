{
  "name": "fiscal-year",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn exec rimraf dist && yarn exec tsc --build",
    "test": "echo testing $npm_package_name && nyc mocha --recursive src",
    "test:ci": "CI=true yarn run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=junit.xml --timeout 60000"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "rimraf": "3.0.2",
    "ts-node": "^5.0.1",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.6.0",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "typescript",
    "date",
    "Fiscal Year",
    "Financial Year"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": true
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.spec.ts"
    ],
    "reporter": [
      "text",
      "html",
      "cobertura"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
